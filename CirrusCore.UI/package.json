{
  "name": "cirrus-core",
  "description": "Cirrus Core Wallet",
  "version": "1.5.1",
  "author": {
    "name": "Stratis Group Ltd.",
    "email": "support@stratisplatform.com"
  },
  "license": "MIT",
  "homepage": "https://github.com/stratisproject/CirrusCore",
  "keywords": [
    "cirrus",
    "ui",
    "stratis",
    "core",
    "bitcoin",
    "angular",
    "electron",
    "typescript",
    "scss",
    "bootstrap"
  ],
  "main": "main.js",
  "private": true,
  "scripts": {
    "postinstall": "node ./src/environments/git-version.js && electron-builder install-app-deps",
    "ng": "ng",
    "ng:serve": "ng serve",
    "ng:serve:web": "ng serve -c web -o",
    "start": "npm run && npm-run-all -p ng:serve \"electron:serve -- {@}\" --",
    "cirrusmain": "npm start --",
    "cirrustest": "npm run && npm-run-all -p ng:serve \"electron:serve:testnet -- {@}\" --",
    "build": "npm run && npm run electron:serve-tsc && ng build",
    "build:dev": "npm run build -- -c dev",
    "build:prod": "npm run build -- -c production",
    "build:styling": "node-sass --output-style expanded --source-map true --precision 6 ./src/scss/bootstrap.scss ./src/styles.css",
    "electron:serve-tsc": "tsc -p tsconfig.serve.json",
    "electron:serve": "wait-on tcp:4200 && npm run electron:serve-tsc && electron . --serve",
    "electron:serve:testnet": "wait-on tcp:4200 && npm run electron:serve-tsc && electron . --serve --testnet",
    "electron:local": "npm run build:prod && electron .",
    "package:linux": "npm run build:prod && electron-builder build --linux",
    "package:linuxarm": "npm run build:prod && electron-builder build --linux --armv7l",
    "package:windows": "npm run build:prod && electron-builder build --windows",
    "package:windows86": "npm run build:prod && electron-builder build --windows --ia32",
    "package:windows64": "npm run build:prod && electron-builder build --windows --x64",
    "package:mac": "npm run build:prod && electron-builder build --mac",
    "test": "ng test --watch=false",
    "e2e": "npm run build:prod && mocha --timeout 300000 --require ts-node/register e2e/**/*.spec.ts",
    "lint": "ng lint"
  },
  "dependencies": {
    "@angular/cdk": "11.2.2",
    "@aspnet/signalr": "1.1.4",
    "bignumber.js": "9.0.1",
    "json-bignumber": "1.0.2",
    "electron-context-menu": "2.5.0",
    "minimist": "1.2.5",
    "ngx-pagination": "5.0.0",
    "@techiediaries/ngx-qrcode": "9.1.0",
    "ngx-snackbar": "2.0.1",
    "tslib": "2.0.3"
  },
  "devDependencies": {
    "@angular-builders/custom-webpack": "11.0.0",
    "@angular-devkit/build-angular": "0.1102.2",
    "@angular-eslint/builder": "1.2.0",
    "@angular-eslint/eslint-plugin": "1.2.0",
    "@angular-eslint/eslint-plugin-template": "1.2.0",
    "@angular-eslint/schematics": "1.2.0",
    "@angular-eslint/template-parser": "1.2.0",
    "@angular/animations": "11.2.3",
    "@angular/cli": "11.2.2",
    "@angular/common": "11.2.3",
    "@angular/compiler": "11.2.3",
    "@angular/compiler-cli": "11.2.3",
    "@angular/core": "11.2.3",
    "@angular/forms": "11.2.3",
    "@angular/language-service": "11.2.3",
    "@angular/platform-browser": "11.2.3",
    "@angular/platform-browser-dynamic": "11.2.3",
    "@angular/router": "11.2.3",
    "@ng-bootstrap/ng-bootstrap": "9.0.2",
    "@ngx-translate/core": "13.0.0",
    "@ngx-translate/http-loader": "6.0.0",
    "@types/jasmine": "3.6.3",
    "@types/jasminewd2": "2.0.8",
    "@types/mocha": "8.2.0",
    "@types/node": "14.14.31",
    "@typescript-eslint/eslint-plugin": "4.15.2",
    "@typescript-eslint/eslint-plugin-tslint": "4.15.2",
    "@typescript-eslint/parser": "4.15.2",
    "bootstrap-scss": "4.6.0",
    "chai": "4.3.0",
    "core-js": "3.6.5",
    "electron": "11.3.0",
    "electron-builder": "22.9.1",
    "electron-reload": "1.5.0",
    "eslint": "7.20.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jsdoc": "31.6.1",
    "eslint-plugin-prefer-arrow": "1.2.3",
    "git-describe": "4.0.4",
    "jasmine-core": "3.6.0",
    "jasmine-spec-reporter": "6.0.0",
    "karma": "~5.1.0",
    "karma-coverage-istanbul-reporter": "3.0.3",
    "karma-electron": "6.3.3",
    "karma-jasmine": "4.0.1",
    "karma-jasmine-html-reporter": "1.5.4",
    "mocha": "8.3.0",
    "node-sass": "5.0.0",
    "ngx-bootstrap": "6.2.0",
    "ngx-clipboard": "14.0.1",
    "ngx-electron": "2.2.0",
    "npm-run-all": "4.1.5",
    "rxjs": "6.6.6",
    "spectron": "13.0.0",
    "ts-node": "9.1.1",
    "typescript": "4.0.5",
    "wait-on": "5.2.1",
    "webdriver-manager": "12.1.8",
    "zone.js": "0.11.4"
  },
  "engines": {
    "node": ">=10.13.0"
  }
}
